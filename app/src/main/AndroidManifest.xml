<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.elderlyframe">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".acitivty.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".acitivty.ZoomSeekBarActivity" />
        <activity
            android:name=".acitivty.PincaZoomActivity"
            android:label="@string/title_activity_pinca_zoom"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".acitivty.SpeechTextActivity" />
        <activity android:name=".acitivty.TouchZoomActivity" />
        <activity android:name=".acitivty.ImageViewRotationAcitvity"></activity>
    </application>

</manifest>